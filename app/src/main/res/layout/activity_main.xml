<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tdt.billionaire.MainActivity"
    android:id="@+id/layout_start"
    android:clickable="true"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>

    <ImageButton
        android:id="@+id/img_start"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:background="@drawable/start_taptoplay"/>

    <ImageButton
        android:id="@+id/ibt_Sound"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:background="@drawable/sound"
        android:layout_below="@+id/img_start"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_ready_parent">

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:background="@drawable/ready"
            android:layout_gravity="center"
            android:id="@+id/layout_ready_child">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:id="@+id/ibt_Cancel"
                android:layout_gravity="right|bottom"
                android:background="@drawable/cancel"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:id="@+id/ibt_OK"
                android:layout_gravity="left|bottom"
                android:background="@drawable/ok"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp" />
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
