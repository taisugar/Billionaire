<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_question"
    android:padding="5dp">

    <ImageButton
        android:id="@+id/call1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/call_1" />

    <ImageButton
        android:id="@+id/call2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/call_2" />

    <ImageButton
        android:id="@+id/call3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/call_3" />

    <ImageButton
        android:id="@+id/call4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/call_4" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/call_full"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/call_1"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="65dp"
        android:id="@+id/tv1"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Tôi nghĩ 3.1444444 là câu trả lời đúng"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/tv2"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Tôi nghĩ 3.1444444 là câu trả lời đúng"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="65dp"
        android:id="@+id/tv3"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Tôi nghĩ 3.1444444 là câu trả lời đúng"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/tv4"
        android:visibility="invisible"/>
</FrameLayout>